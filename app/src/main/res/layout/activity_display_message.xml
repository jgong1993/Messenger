<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">
  
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/passwordThing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delBut"
        android:layout_marginBottom="93dp"
        android:layout_toRightOf="@+id/Title"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/prompt_password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passwordThing"
        android:layout_alignRight="@+id/Title"
        android:text="@string/password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordThing"
        android:layout_alignLeft="@+id/passwordThing"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/usernameS"
        android:inputType="text" />

    <Button
        android:id="@+id/delBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/passwordThing"
        android:layout_marginBottom="212dp"
        android:text="@string/del" />

    <TextView
        android:id="@+id/TitleOfPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/CreateIDTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/EmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailThing"
        android:layout_alignRight="@+id/textView2"
        android:text="@string/emailID"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailThing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordThing"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userName"
        android:layout_alignLeft="@+id/submit"
        android:text="@string/UserID"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TitleOfPage"
        android:layout_below="@+id/passwordThing"
        android:layout_marginLeft="23dp"
        android:minWidth="80dp"
        android:text="@string/register" />

    <TextView
        android:id="@+id/reg_status"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:hint="@string/reg_status" />

    <Button
        android:id="@+id/backbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_status"
        android:layout_alignRight="@+id/reg_status"
        android:layout_below="@+id/reg_status"
        android:text="@string/Login" />

</RelativeLayout>

</ScrollView>